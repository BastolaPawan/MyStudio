@model MyStudio.Models.Purchase
@{
    ViewData["Title"] = "Purchase Order Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Purchase Order Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Purchases</a></li>
                    <li class="breadcrumb-item active">@Model.PurchaseNumber</li>
                </ol>
            </nav>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to Purchases</a>
            @if (Model.Status != "Received")
            {
                <a asp-action="Receive" asp-route-id="@Model.Id" class="btn btn-success">Receive Items</a>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Purchase Information -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Purchase Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Purchase #:</dt>
                        <dd class="col-sm-8"><strong>@Model.PurchaseNumber</strong></dd>

                        <dt class="col-sm-4">Vendor:</dt>
                        <dd class="col-sm-8">@Model.Vendor.Name</dd>

                        <dt class="col-sm-4">Purchase Date:</dt>
                        <dd class="col-sm-8">@Model.PurchaseDate.ToString("MMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Delivery Date:</dt>
                        <dd class="col-sm-8">@(Model.DeliveryDate?.ToString("MMM dd, yyyy") ?? "Not specified")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Received" ? "success" : Model.Status == "Ordered" ? "warning" : "secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Created Date:</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Financial Summary -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Financial Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-6">Subtotal:</dt>
                        <dd class="col-sm-6">@Model.SubTotal.ToString("C")</dd>

                        <dt class="col-sm-6">Tax Amount:</dt>
                        <dd class="col-sm-6">@Model.TaxAmount.ToString("C")</dd>

                        <dt class="col-sm-6">Shipping Cost:</dt>
                        <dd class="col-sm-6">@Model.ShippingCost.ToString("C")</dd>

                        <dt class="col-sm-6">Total Amount:</dt>
                        <dd class="col-sm-6"><strong>@Model.TotalAmount.ToString("C")</strong></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Purchase Items -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Purchase Items</h5>
                </div>
                <div class="card-body">
                    @if (Model.PurchaseItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>SKU</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Discount</th>
                                        <th>Line Total</th>
                                        <th>Received</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PurchaseItems)
                                    {
                                        <tr>
                                            <td>@item.Item.Name</td>
                                            <td>@item.Item.SKU</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.UnitPrice.ToString("C")</td>
                                            <td>@item.DiscountPercent.ToString("F1")%</td>
                                            <td>@item.LineTotal.ToString("C")</td>
                                            <td>@(item.QuantityReceived?.ToString() ?? "0") / @item.Quantity</td>
                                            <td>
                                                @if (item.QuantityReceived >= item.Quantity)
                                                {
                                                    <span class="badge bg-success">Fully Received</span>
                                                }
                                                else if (item.QuantityReceived > 0)
                                                {
                                                    <span class="badge bg-warning">Partially Received</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pending</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No items in this purchase order.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Notes</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Notes</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>