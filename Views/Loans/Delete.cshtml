@model MyStudio.Models.Loan

@{
    ViewData["Title"] = "Delete Loan";
}

<div class="container">
    <h1>Delete Loan</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this loan?</h4>
        <p><strong>This action cannot be undone!</strong></p>
        <p class="mb-0">This will permanently delete the loan and all its associated data including installments and transaction history.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Loan Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Account Number:</dt>
                <dd class="col-sm-8">@Model.LoanAccountNumber</dd>

                <dt class="col-sm-4">Loan Type:</dt>
                <dd class="col-sm-8">@Model.LoanType</dd>

                <dt class="col-sm-4">Loan Amount:</dt>
                <dd class="col-sm-8">@Model.InitialLoanAmount.ToString("C")</dd>

                <dt class="col-sm-4">Interest Rate:</dt>
                <dd class="col-sm-8">@Model.CurrentInterestRate.ToString("0.00")%</dd>

                <dt class="col-sm-4">Status:</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.LoanStatus == "Active" ? "bg-success" : "bg-secondary")">
                        @Model.LoanStatus
                    </span>
                </dd>
            </dl>

            <!-- FIX: Use the correct form action -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="LoanId" />
                @Html.AntiForgeryToken()

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger">Yes, Delete Permanently</button>
                    <a asp-action="Details" asp-route-id="@Model.LoanId" class="btn btn-secondary">Cancel</a>

                    <!-- FIX: Use proper form for Close action -->
                    @if (Model.LoanStatus == "Active")
                    {
                        <form asp-action="Close" method="post" style="display: inline;">
                            <input type="hidden" name="id" value="@Model.LoanId" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning">Close Loan Instead</button>
                        </form>
                    }
                </div>
            </form>
        </div>
    </div>
</div>