@model MyStudio.Models.LoanTransaction

@{
    ViewData["Title"] = "Confirm Delete Payment";
}

<div class="container">
    <h1>Confirm Delete Payment</h1>

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this payment?</h4>
        <p>This action will:</p>
        <ul>
            <li>Remove the payment transaction record</li>
            <li>Reset the installment status to "Pending"</li>
            <li>Update the loan outstanding balance</li>
        </ul>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Payment Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Loan Account:</dt>
                <dd class="col-sm-8">@Model.Loan?.LoanAccountNumber</dd>

                <dt class="col-sm-4">Transaction Date:</dt>
                <dd class="col-sm-8">@Model.TransactionDate.ToString("MMM dd, yyyy")</dd>

                <dt class="col-sm-4">Amount:</dt>
                <dd class="col-sm-8">@Model.Amount.ToString("C")</dd>

                <dt class="col-sm-4">Principal:</dt>
                <dd class="col-sm-8">@Model.PrincipalAmount.ToString("C")</dd>

                <dt class="col-sm-4">Interest:</dt>
                <dd class="col-sm-8">@Model.InterestAmount.ToString("C")</dd>

                <dt class="col-sm-4">Payment Method:</dt>
                <dd class="col-sm-8">@Model.PaymentMethod</dd>

                @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
                {
                    <dt class="col-sm-4">Reference Number:</dt>
                    <dd class="col-sm-8">@Model.ReferenceNumber</dd>
                }
            </dl>

            <form asp-action="DeletePayment" method="post">
                <input type="hidden" name="transactionId" value="@Model.TransactionId" />
                @Html.AntiForgeryToken()

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger">Yes, Delete Payment</button>
                    <a asp-action="Details" asp-route-id="@Model.LoanId" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>