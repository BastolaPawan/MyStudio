@model MyStudio.Models.Loan

@{
    ViewData["Title"] = "Loan Details";
}

<div class="container">
    <h1>Loan Details</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card">
        <div class="card-header">
            <h4>@Model.LoanType - @Model.LoanAccountNumber</h4>
        </div>
        <div class="card-body">
            <div class="col-md-6">
                <h5>Basic Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Account Number:</dt>
                    <dd class="col-sm-8">@Model.LoanAccountNumber</dd>

                    <dt class="col-sm-4">Loan Type:</dt>
                    <dd class="col-sm-8">@Model.LoanType</dd>

                    <dt class="col-sm-4">Loan Amount:</dt>
                    <dd class="col-sm-8">@Model.InitialLoanAmount.ToString("C")</dd>

                    <dt class="col-sm-4">Interest Rate:</dt>
                    <dd class="col-sm-8">@Model.CurrentInterestRate.ToString("0.00")%</dd>
                </dl>
            </div>
            <div class="mt-4">
                <h5>Recent Transactions</h5>
                @if (Model.Transactions?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>Principal</th>
                                    <th>Interest</th>
                                    <th>Method</th>
                                    <th>Reference</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.Transactions.OrderByDescending(t => t.TransactionDate))
                                {
                                    <tr>
                                        <td>@transaction.TransactionDate.ToString("MMM dd, yyyy")</td>
                                        <td>@transaction.TransactionType</td>
                                        <td>@transaction.Amount.ToString("C")</td>
                                        <td>@transaction.PrincipalAmount.ToString("C")</td>
                                        <td>@transaction.InterestAmount.ToString("C")</td>
                                        <td>@transaction.PaymentMethod</td>
                                        <td>@transaction.ReferenceNumber</td>
                                        <td>
                                            <form asp-action="ConfirmDeletePayment" method="get" style="display: inline;">
                                                <input type="hidden" name="transactionId" value="@transaction.TransactionId" />
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        title="Delete this payment"
                                                        onclick="return confirm('Are you sure you want to delete this payment?')">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p>No transactions found.</p>
                }
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <a asp-action="MakePayment" asp-route-id="@Model.LoanId" class="btn btn-success">Make Payment</a>
                <a asp-action="UpdateInterestRate" asp-route-id="@Model.LoanId" class="btn btn-warning">Update Interest Rate</a>
            </div>
        </div>
    </div>
</div>