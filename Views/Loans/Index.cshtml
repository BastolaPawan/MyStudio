@model IEnumerable<MyStudio.Models.Loan>

@{
    ViewData["Title"] = "Loans";
}

<div class="container">
    <h1>Loans</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Loan</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Account Number</th>
                    <th>Type</th>
                    <th>Loan Amount</th>
                    <th>Interest Rate</th>
                    <th>EMI Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.LoanAccountNumber</td>
                        <td>@item.LoanType</td>
                        <td>@item.InitialLoanAmount.ToString("C")</td>
                        <td>@item.CurrentInterestRate.ToString("0.00")%</td>
                        <td>@item.InstallmentAmount.ToString("C")</td>
                        <td>
                            <span class="badge @(item.LoanStatus == "Active" ? "bg-success" : "bg-secondary")">
                                @item.LoanStatus
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.LoanId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.LoanId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="UpdateInterestRate" asp-route-id="@item.LoanId" class="btn btn-secondary btn-sm">Update Rate</a>
                                <a asp-action="MakePayment" asp-route-id="@item.LoanId" class="btn btn-success btn-sm">Pay</a>
                                <a asp-action="Delete" asp-route-id="@item.LoanId" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>