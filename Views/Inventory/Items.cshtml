@model List<MyStudio.Models.Item>
@{
    ViewData["Title"] = "All Items";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>All Items</h1>
            <p class="lead">Manage your photo studio inventory items</p>
        </div>
        <div class="col-auto">
            <a asp-action="CreateItem" class="btn btn-success">Add New Item</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Dashboard</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>SKU</th>
                                <th>Item Name</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Group</th>
                                <th>Current Stock</th>
                                <th>Reorder Level</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.SKU</strong></td>
                                    <td>@item.Name</td>
                                    <td>@item.Brand</td>
                                    <td>@item.Model</td>
                                    <td>@item.ItemGroup?.Name</td>
                                    <td>
                                        <span class="badge bg-@(item.CurrentStock == 0 ? "danger" : item.CurrentStock <= item.ReorderLevel ? "warning" : "success")">
                                            @item.CurrentStock
                                        </span>
                                    </td>
                                    <td>@item.ReorderLevel</td>
                                    <td>
                                        @if (item.CurrentStock == 0)
                                        {
                                            <span class="badge bg-danger">Out of Stock</span>
                                        }
                                        else if (item.CurrentStock <= item.ReorderLevel)
                                        {
                                            <span class="badge bg-warning">Low Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">In Stock</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="ItemDetails" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info">Details</a>
                                        <a asp-controller="Purchase" asp-action="Create"
                                           class="btn btn-sm btn-outline-success">Purchase</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <h4 class="text-muted">No items found</h4>
                    <p class="text-muted">Get started by adding your first inventory item.</p>
                    <a asp-action="CreateItem" class="btn btn-primary">Add Your First Item</a>
                </div>
            }
        </div>
    </div>
</div>